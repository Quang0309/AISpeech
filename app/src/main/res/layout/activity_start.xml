    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgViewPointer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_fileName="micro_interaction_-_touch_app_animation.json"
        app:lottie_loop="true"

        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@android:color/white"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />
    <com.john.waveview.WaveView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="400dp"
        app:wave_height="large"
        app:wave_hz="fast"
        app:wave_length="large"
        android:id="@+id/wave"

        app:above_wave_color="@android:color/white"
        app:blow_wave_color="@android:color/white"
        app:progress="40"
        />
</RelativeLayout>
